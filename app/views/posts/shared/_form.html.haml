    / PAGE CONTENT BEGINS
    = form_for @post, html: {class: 'form-horizontal', role: 'form'} do |f|
      %div{ class: "form-group #{'has-error' if @post.errors[:title].present?}" }
        = f.label :title, class: ' col-sm-3 control-label no-padding-right'
        .col-sm-9
          = f.text_field :title, class: 'col-xs-10 col-sm-5', placeholder: Post.human_attribute_name(:title)
          - if @post.errors[:title].present?
            %span.help-inline.col-xs-12.col-sm-7
              %span.middle= @post.errors[:title].join(', ')

      %div{ class: "form-group #{'has-error' if @post.errors[:description].present?}" }
        = f.label :description, class: ' col-sm-3 control-label no-padding-right'
        .col-sm-9
          = f.text_area :description, class: 'col-xs-10 col-sm-5', placeholder: Post.human_attribute_name(:description)
          - if @post.errors[:description].present?
            %span.help-inline.col-xs-12.col-sm-7
              %span.middle= @post.errors[:description].join(', ')

      .clearfix.form-actions
        .col-md-offset-3.col-md-9
          = button_tag class: 'button btn btn-info', type: 'submit' do
            %i.ace-icon.fa.fa-check.bigger-110
            - if action_name.in?(%w(new create))
              = t('.create', :default => t("helpers.submit.create"))
            - elsif action_name.in?(%w(edit update))
              = t('.update', :default => t("helpers.submit.update"))
            - else
              = t('.submit', :default => t("helpers.submit.submit"))

          &nbsp;&nbsp;&nbsp;

          = link_to posts_path, class: 'btn', type: 'reset' do
            %i.ace-icon.fa.fa-undo.bigger-110
            = t('.cancel', :default => t("helpers.links.cancel"))

