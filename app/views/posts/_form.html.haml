= simple_form_for @post, wrapper: 'horizontal_form', :html => { :class => 'form-horizontal' } do |f|
  = f.input :title
  = error_span(@post[:title])

  = f.input :description
  = error_span(@post[:description])

  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => 'btn btn-default'
