!!! 5
%html(lang="en")
  - if user_signed_in?
    - if controller_name == 'posts'
      = render partial: 'layouts/ace/header_not_signed_in'
      %body.no-skin
        = render partial: 'layouts/ace/navbar'
        = render partial: 'layouts/ace/main_container'
    - else
      = render partial: 'layouts/header_signed_in'
      = render partial: 'layouts/body_signed_in'
  - else
    = render partial: 'layouts/ace/header_not_signed_in'
    = render partial: 'layouts/ace/body_not_signed_in'
